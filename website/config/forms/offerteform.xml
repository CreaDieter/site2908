<?xml version="1.0" encoding="UTF-8"?>
<form>
	<name>offerte</name>
	<method>post</method>
	<elements>
		<bedrijf>
			<type>text</type>
			<options>
				<label>Bedrijf:</label>
				<required>1</required>
			</options>
		</bedrijf>
		<contactpersoon>
			<type>text</type>
			<options>
				<label>Contactpersoon:</label>
				<required>1</required>
			</options>
		</contactpersoon>
		<adres>
			<type>text</type>
			<options>
				<label>Adres:</label>
				<required>1</required>
			</options>
		</adres>
		<postnummer>
			<type>text</type>
			<options>
				<label>Postnummer:</label>
				<required>1</required>
			</options>
		</postnummer>
		<stad>
			<type>text</type>
			<options>
				<label>Stad:</label>
				<required>1</required>
			</options>
		</stad>
		<telefoon>
			<type>text</type>
			<options>
				<label>Telefoon:</label>
				<required>1</required>
			</options>
		</telefoon>
		<fax>
			<type>text</type>
			<options>
				<label>Fax:</label>
			</options>
		</fax>
		<email>
			<type>text</type>
			<options>
				<label>E-mailadres:</label>
				<required>true</required>
				<validators>
					<email>
						<validator>EmailAddress</validator>
					</email>
				</validators>
			</options>
		</email>
		<opmerking>
			<type>textarea</type>
			<options>
				<required>true</required>
				<rows>6</rows>
				<cols>50</cols>
				<label>opmerking:</label>
			</options>
		</opmerking>
		<hiddie>
			<type>hidden</type>
			<options>
				<value>incorrect</value>
				<validators>
					<identical>
						<validator>Identical</validator>
						<options>
							<token>correctValue</token>
						</options>
					</identical>
				</validators>
			</options>
		</hiddie>

		<submit>
			<type>submit</type>
			<options>
				<type>submit</type>
				<label>Verzenden</label>
			</options>
		</submit>

	</elements>

	<displayGroups>
		<DisplayGroupAlgemeen>
			<elements>
				<bedrijf>bedrijf</bedrijf>
				<contactpersoon>contactpersoon</contactpersoon>
				<adres>adres</adres>
				<postnummer>postnummer</postnummer>
				<stad>stad</stad>
				<telefoon>telefoon</telefoon>
				<fax>fax</fax>
				<email>email</email>
				<opmerking>opmerking</opmerking>
				<submit>submit</submit>
			</elements>
		</DisplayGroupAlgemeen>
	</displayGroups>
</form>